<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Profile_Preferences_User_Page.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Profile_Preferences_User_Page"
    xmlns:pages="clr-namespace:Profile_Preferences_User_Page.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Profile Viewer">

    <Shell.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New User Profile.." Clicked="NewUserProfile"/>
            <MenuFlyoutItem Text="Exit Program" Clicked="ExitProgram"/>
        </MenuBarItem>
    </Shell.MenuBarItems>

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="MainPage" />

</Shell>
